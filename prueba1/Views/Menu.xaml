<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prueba1.Views.Menu"
              BackgroundColor="{StaticResource PrimaryColor}"
             
             Title="">

    <VerticalStackLayout Padding="0" Spacing="10" HorizontalOptions="Center">
        <Image       Source="menu.png"
      HeightRequest="75"
      BackgroundColor="Bisque"
      HorizontalOptions="Center"
      Aspect="AspectFit" />

        <Label Text="Menú"
        TextColor="Black"
        FontSize="Medium"
        FontAttributes="Bold"
        HorizontalOptions="Center" />

        <Grid BackgroundColor="#FFCC80" HeightRequest="150" Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <Image Source="churro.png"
            HeightRequest="150"
            WidthRequest="150"
           HorizontalOptions="Center"
           Aspect="AspectFit"
           Grid.Column="0" />


            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Padding="20,0,0,0">
                <Label Text="Nombre$"
               TextColor="Black"
               FontAttributes="Bold"
               HorizontalOptions="Start" />

                <Label Text="Descripción$"
               TextColor="Black"
               FontAttributes="Bold"
               HorizontalOptions="Start" />

                <Label Text="Precio$"
               TextColor="Black"
               FontAttributes="Bold"
               HorizontalOptions="Start" />

                <Label Text="Disponible$"
               TextColor="Black"
               FontAttributes="Bold"
               HorizontalOptions="Start" />
            </VerticalStackLayout>

        </Grid>
    </VerticalStackLayout>

</ContentPage>