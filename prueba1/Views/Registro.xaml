<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prueba1.Views.Registro"
              BackgroundColor="{StaticResource PrimaryColor}"
             Title="Registro">
    <VerticalStackLayout Padding="30" Spacing="18">

        <Label Text="Únete a nosotros en el Santo Churro"    
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level2" />

        <Entry x:Name="txtUsuario" Placeholder="Usuario" Keyboard="Text" />
        <Entry x:Name="txtCorreo" Placeholder="Correo" Keyboard="Email" />
        <Entry x:Name="txtContraseña" Placeholder="Contraseña" IsPassword="True" />
        <Entry x:Name="txtTelefono" Placeholder="Teléfono" Keyboard="Telephone" />
        <Entry x:Name="txtDomicilio" Placeholder="Domicilio" Keyboard="Text" />


        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
            <CheckBox x:Name="chkAceptar" />
            <Label Text="Acepto los términos y condiciones" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <Button Text="Registrarse"
        BackgroundColor="#8B4513"
        TextColor="White"
        Clicked="OnLoginClicked4"
        HorizontalOptions="Fill" />
        
    </VerticalStackLayout>
</ContentPage>