<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prueba1.MainPage"
             BackgroundColor="#FFF5E1">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="18">
    
            <Grid ColumnDefinitions="*,Auto" Padding="10" VerticalOptions="Start">
                <!-- Logo a la izquierda -->
                <Image 
        Source="santochurro1.png"
        HeightRequest="180"
        WidthRequest="280"
        Aspect="AspectFit"
        Grid.Column="0" />

                <!-- Botón de menú a la derecha -->
                <ImageButton 
        Source="hamburger.png"
        BackgroundColor="Transparent"
        HeightRequest="40"
        WidthRequest="40"
        Clicked="OnMenuClicked"
        Grid.Column="1" />
            </Grid>


            <Label Text="Bienvenido al&#10;Santo Churro"    
                   Style="{StaticResource Headline}"
                   FontAttributes="Bold"
                   TextColor="Maroon"
                   SemanticProperties.HeadingLevel="Level1" />

            <Label Text="Iniciar Sesión"
                   FontSize="Title"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Usuario"
                   Keyboard="Text" />

            <Entry Placeholder="Contraseña"
                   IsPassword="True" />

            <Button Text="Menú sin Conexión"
                Clicked="OnLoginClicked"
                BackgroundColor="#8B4513"
                HorizontalOptions="Fill"/>
            
            <Button Text="Iniciar Sesión"
                Clicked="OnLoginClicked2"
                 BackgroundColor="#8B4513"
                HorizontalOptions="Fill"/>
            
            <Button Text="Registrarse"
                    BackgroundColor="#8B4513"
                    TextColor="White"
                    Clicked="OnLoginClicked3"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
